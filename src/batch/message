struct Checksum
{
  byte[20] sha1;
};

// usecs since epoch
typedef uint64 Timestamp;

union Metadatum
{
  Timestamp timestamp;
  struct {
    string key;
    string value;
  } misc;
};

typedef Metadatum[] Metadata;

union Message
{
  struct {
    uint64 est_n_records;	/* or 0 for unknown */
    uint64 est_n_bytes;		/* or 0 for unknown */
    string filename;
    Metadata metadata;
    optional uint8[16] md5sum;
  } begin_upload;
  struct {
    uint64 est_n_records;	/* or 0 for unknown */
    uint64 est_n_bytes;		/* or 0 for unknown */
    Metadata metadata;
    uint64 key;
  } expect_upload;
  struct {
    uint64 key;
  } expecting_upload;
  struct {
    ...
  } begin_upload;
  struct {
    ...
  } upload_header;
  struct {
    uint64 key;
    byte[] data;
  } file_data;
  struct {
    uint64 key;
    byte[] data;
  } file_data;
  struct {
    guint64 key;
  } upload_done;
  struct {
    guint64 key;
  } done_uploading;
  struct {
    guint64 key;
  } upload_succeeded;
  struct {
    guint64 key;
  } upload_failed;
};
